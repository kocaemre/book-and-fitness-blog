<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css"> 
    <style>
        body {
                /* background */
            background: #E0EAFC;  /* fallback for old browsers */
            background: -webkit-linear-gradient(to right, #CFDEF3, #E0EAFC);  /* Chrome 10-25, Safari 5.1-6 */
            background: linear-gradient(to right, #CFDEF3, #E0EAFC); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

        }
    </style>
    <title>Blogs</title>
</head>

<!-- Navbar -->
<%- include('../partials/nav') %>

<table class="table table-hover container my-5">
    <thead>
      <tr>
        <th scope="col" style="width: 50px;">#</th>
        <th scope="col">Book Name</th>
        <th scope="col">Description</th>
        <th scope="col" style="width: 50px;"></th>
        <th scope="col" style="width: 50px;"></th>
      </tr>
    </thead>
    <tbody>
        <% data.forEach(element => { %>
         
        
      <tr>
        <th scope="row"><%= element.id %></th>
        <td><%= element.title %></td>
        <td><%= element.description %></td>
        <td><a class="btn btn-warning" href="/admin/blogs/edit/<%= element.id %>" role="button">Edit</a></td>
            
        <td><a class="btn btn-danger" href="/admin/blogs/delete/<%= element.id %>" role="button">Delete</a></td>
        
      </tr>
      <% }) %>
      
    </tbody>
  </table>



    <!-- footer -->
    <%- include('../partials/footer') %>
    
</body>
</html>